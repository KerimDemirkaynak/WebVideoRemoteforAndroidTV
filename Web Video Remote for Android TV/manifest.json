{
  "manifest_version": 3,
  "name": "Web Video Remote for Android TV",
  "version": "1.2",
  "description": "It only works in windows containing videos, excluding the specified sites.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.vidmoly.net/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}